{% extends "layout.jinja2" %}

{% block content %}
<div class="content">

<div class="page-header">
    <h1>Pyramid | <small> Tasks Videos</small></h1>
</div>
<div class="row">
    <div class="span10">
    <table id="tasks" class="table table-hover" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Score</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                    </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.name }}</td>
                    <td>{{ task.category }}</td>
                    <td>{{ task.score }}</td>
                    <td>{{ task.created_at }}</td>
                    <td>{{ task.updated_at }}</td>
                  </tr>
                  {% for task in tasks %}
                  <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.name }}</td>
                    <td>{{ task.category }}</td>
                    <td>{{ task.score }}</td>
                    <td>{{ task.created_at }}</td>
                    <td>{{ task.updated_at }}</td> 
                  </tr>
                    <tr>
                      <td colspan="7" class="text-center bg-warning">No registers...</td>
                    </tr>
                 {% endfor %}
                </tbody>
            </table>


        <form action="/add" method="POST" id="add_to_todo_list">
            <input type="text" name="todo_item"/>
            <input type="submit" class="btn" name="add_todo_submit" value="Add to List!"/>
        </form>
    </div>
    <div class="span4">
        <h3>Secondary Content</h3>
        <ul>
        <li>Item 1</li>
        <li>Item 2</li>
        <li>Item 3</li>
    </div>
</div>



</div>

{% endblock content %}
